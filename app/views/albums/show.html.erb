<h3> Album details </h3>

<p> Title: <%= @album.title %> </p>
<p> Band: <%= link_to @album.band.name, band_url(@album.band_id) %> </p>
<p> <%= @album.live_album ? "This is a live album." : "" %> </p>

<%= link_to 'Edit Album', edit_album_url(@album) %>&nbsp;
&nbsp;
<%= link_to 'Delete Album', album_url(@album), method: :delete %>

<h3> Tracks </h3>
<ul>
<% @album.tracks.each do |track| %>
  <li> <%= link_to track.name, track_url(track) %></li>
<% end %>
</ul>

<%= link_to 'Add Track', new_track_url %>
